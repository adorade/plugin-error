    "prepublishOnly": "yarn test"
  },
  "dependencies": {
    "ansi-colors": "4.1.3"
  },
  "devDependencies": {
    "@babel/core": "7.25.2",
    "@babel/eslint-parser": "7.25.1",
    "@babel/preset-env": "7.25.4",
    "@eslint/js": "9.11.1",
    "@stylistic/eslint-plugin-js": "2.8.0",
    "eslint": "9.11.1",
    "globals": "15.9.0",
    "jest": "29.7.0"
  },
  "license": "MIT"
}
